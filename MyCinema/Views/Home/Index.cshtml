@model IEnumerable<MyCinema.Models.MovieModel>


<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<hr>
</div>
@if (Model != null)
{
	<div class="container d-flex flex-wrap">
		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row" style="justify-content: center">
					@foreach (var item in Model)
					{
						<div class="col-md-4">
							<div class="card mb-4 shadow-sm">
								<img class="card-img-top" src="@item.Thumbnail" width="225" preserveAspectRatio="xMidYMid slice" role="img" aria-label="@item.Name">
								<div class="card-body">
									<h2>@item.Name</h2>
									<p class="card-text">@item.Description.Substring(0, Math.Min(150, item.Description.Length))<span>...</span></p>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<a class="btn btn-sm btn-outline-secondary" href="Home/Details/@item.Id">Детали</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
}
else
{
	<head>
		<style>
			.footer {
				position: absolute;
			}
		</style>
	</head>
	<div class="text-center">
		<h2 class="display-4">No data</h2>
	</div>
}