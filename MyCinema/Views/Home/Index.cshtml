@if (Model != null)
{
	<div class="container d-flex flex-wrap">
		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-md-4">
							<div class="card mb-4 shadow-sm">
								<img class="bd-placeholder-img card-img-top" src="@item.Thumbnail" width="225" preserveAspectRatio="xMidYMid slice" role="img" aria-label="@item.Name">
								<div class="card-body">
									<h2>@item.Name</h2>
									<p class="card-text">@item.Description.Substring(0, Math.Min(150, item.Description.Length))<span>...</span></p>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											@*<button type="button" class="btn btn-sm btn-outline-secondary">View</button>*@
											<input type="button" class="btn btn-sm btn-outline-secondary" value="View"></input>
										</div>
										<small class="text-muted">@item.Duration</small>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
