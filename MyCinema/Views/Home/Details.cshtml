<div class="custom-flex-box bg-light" style="padding: 48px 0">
	<div class="custom-flex-item">
		<img class="custom-flex-item-img" src="@Model.Thumbnail" alt="@Model.Name">
	</div>
	<div class="custom-flex-item">
		<strong>Описание:</strong>
		<p>@Model.Description</p>
		<div class="custom-flex-box" style="justify-content: center">
			<div id="hall-scheme">
				<div class="screen">
					<div class="caption">екран</div>
				</div>
				<div id="hall-scheme-legend">
					<ul>
						<li>
							<div class="seat seat-color2"></div>
							$@Model.Price
						</li>
					</ul>
				</div>
				<div class="wrapper" style="height: 228.8px;">
					<div id="hall-scheme-container" style="height: 228.8px; overflow: hidden;">
						<div style="position: relative; width: 324px; height: 220px; top: 0px;justify-content: center;">
							<a id="" asp-action="index" class="seat seat-color2" title="70.00 грн" style="font-size: 11px; position: relative; width: 16px; height: 16px; line-height: 16px;">3</a>
							<div id="" class="seat seat-hover" title="70.00 грн" style="font-size: 11px; position: relative; width: 16px; height: 16px; line-height: 16px;">3</div>
							<div id="" class="seat seat-occupied" title="70.00 грн" style="font-size: 11px; position: relative; width: 16px; height: 16px; line-height: 16px;">3</div>
						</div>
					</div>
				</div>
				<div id="hall-scheme-buttons">
					<div class="center">
						<div>
							<button class="button purchase-button">купити квитки</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>